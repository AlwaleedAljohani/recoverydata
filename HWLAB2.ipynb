    "import nltk\r\n",
    "from nltk.corpus import PlaintextCorpusReader\r\n",
    "files = \".*\\.txt\"\r\n",
    "paths = PlaintextCorpusReader(\"path\", files)\r\n",
    "files  = nltk.Text(paths.fileids())\r\n",
    "words = nltk.Text(paths.words())\r\n",
    "print(files)\r\n",
    "print(words)"
